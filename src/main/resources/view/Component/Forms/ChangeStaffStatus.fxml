<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.project_management_tool.controller.component.project.ChangeStaffStatusController">
    <children>

        <!-- Main Content -->
        <HBox alignment="CENTER" spacing="40.0" styleClass="main-content" stylesheets="@../../../css/addStaff.css" VBox.vgrow="ALWAYS">
            <children>
                <Label styleClass="field-label" text="Status *">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <ComboBox fx:id="status" prefWidth="200.0" promptText="Select role" styleClass="modern-combo-box">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="PENDING" />
                            <String fx:value="ACTIVE" />
                            <String fx:value="INACTIVE" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </children>
        </HBox>
    </children>
</VBox>
